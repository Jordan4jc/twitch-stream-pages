<form class="container">
  <div class="row">
    <div class="form-group col-sm-6 col-sm-offset-3">
      <button class="btn btn-success" {{action 'win'}}>Win</button>
    </div>
    <div class="form-group col-sm-6 col-sm-offset-3">
      <button class="btn btn-error" {{action 'loss'}}>Loss</button>
    </div>
  </div>
</form>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <section class="placements">
        {{#each model as |result|}}
          <aside class="result {{if result.win 'win' 'loss'}}" {{action "remove" result}}></aside>
        {{/each}}
      </section>
    </div>
  </div>
</div>