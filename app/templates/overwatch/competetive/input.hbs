<form class="container">
  <div class="row">
    <div class="form-group col-sm-6 col-sm-offset-3">
      <label for="starting-sr">Starting SR</label>
      {{input type="number" class="form-control input-lg" id="starting-sr" value=model.startingSR key-up="keyUp"}}
    </div>
    <div class="form-group col-sm-6 col-sm-offset-3">
      <label for="current-sr">Current SR</label>
      {{input type="number" class="form-control input-lg" id="current-sr" value=model.currentSR key-up="keyUp"}}
    </div>
    <div class="form-group col-sm-6 col-sm-offset-3">
      <label for="games-won">Games Won</label>
      {{input type="number" class="form-control" id="games-won" value=model.gamesWon key-up="keyUp"}}
    </div>
    <div class="form-group col-sm-6 col-sm-offset-3">
      <label for="games-lost">Games Lost</label>
      {{input type="number" class="form-control" id="games-lost" value=model.gamesLost key-up="keyUp"}}
    </div>
  </div>
</form>
